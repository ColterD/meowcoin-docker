# Meowcoin Docker Environment Configuration
# Copy this file to .env and customize as needed

# Meowcoin Version (use 'latest' or specific version like '2.0.5')
MEOWCOIN_VERSION=latest

# Architecture (usually x86_64-linux-gnu for most systems)
MEOWCOIN_ARCH=x86_64-linux-gnu

# User and Group IDs (should match your host user for proper permissions)
MEOWCOIN_UID=1000
MEOWCOIN_GID=1000

# Network Configuration
MEOWCOIN_RPC_PORT=9766
MEOWCOIN_P2P_PORT=8788

# Node Configuration
MEOWCOIN_MAX_CONNECTIONS=100
MEOWCOIN_DB_CACHE=1024
MEOWCOIN_MAX_MEMPOOL=300
MEOWCOIN_TXINDEX=1
MEOWCOIN_MEOWPOW=1
MEOWCOIN_BANTIME=86400

# Resource Limits
RESOURCES_LIMIT_MEMORY=4G
RESOURCES_LIMIT_CPUS=2.0
RESOURCES_RESERVATION_MEMORY=2G
RESOURCES_RESERVATION_CPUS=0.5

# Monitor Configuration
MONITOR_INTERVAL=60
MONITOR_LIMIT_MEMORY=256M
MONITOR_LIMIT_CPUS=0.2
DEBUG=0

# Timezone
TZ=UTC